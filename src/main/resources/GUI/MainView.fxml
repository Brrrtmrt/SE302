                        <MenuItem mnemonicParsing="false" onAction="#importClassroomCapacity" text="Import Classroom-Capacty" />
                        <MenuItem mnemonicParsing="false" onAction="#importAttendanceList" text="Import Attendence List" />
                        <MenuItem mnemonicParsing="false" onAction="#exportTimetable" text="Export The TimeTable" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Daha Fazla">
                    <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleManuel" text="Manuel" />
                        <CheckMenuItem mnemonicParsing="false" onAction="#handleDarkMode" text="KaranlÄ±k Mod" />
