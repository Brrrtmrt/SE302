<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MainViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" text="Import Stduent" />
              <MenuItem mnemonicParsing="false" text="Import Course" />
                  <MenuItem mnemonicParsing="false" text="Import Classroom-Capacty" />
                  <MenuItem mnemonicParsing="false" text="Import Attendence List" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <CheckMenuItem mnemonicParsing="false" onAction="#handleDarkMode" text="Dark Mode" />
               </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>

    <right>
        <VBox styleClass="sidebar" prefWidth="250.0" spacing="10.0" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 0 0 0 1;">

            <Label style="-fx-font-weight: bold;" text="All Students" />
            <ListView fx:id="studentList" VBox.vgrow="ALWAYS" />

            <Label style="-fx-font-weight: bold;" text="All Courses" />
            <ListView fx:id="courseList" VBox.vgrow="ALWAYS" />

            <Label style="-fx-font-weight: bold;" text="Classrooms &amp; Capacities" />
            <ListView fx:id="classroomList" VBox.vgrow="ALWAYS" />

            <Label style="-fx-font-weight: bold;" text="Attendance Lists" />
            <ListView fx:id="attendanceList" VBox.vgrow="ALWAYS" />

        </VBox>
    </right>
</BorderPane>
